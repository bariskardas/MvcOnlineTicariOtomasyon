@using MvcTicariOtomasyon.Models.Siniflar
@model List<KargoDetay>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />

@using (Html.BeginForm("Index", "Kargo", FormMethod.Get))
{
    <p>
        Kargo Takip No: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}

<table class="table table-striped" style="margin-top:20px">
    <tr>

        <th>Personel</th>
        <th>Alıcı</th>
        <th>Takip Kodu</th>
        <th>Tarih</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var k in Model)
    {
    <tr>
        <td>@k.Personel</td>
        <td>@k.Alici</td>
        <td>@k.TakipKodu</td>
        <td>@Convert.ToDateTime(k.Tarih).ToString("dd/MM/yyyy")</td>
        <td><a href="/Kargo/KargoTakip/@k.TakipKodu" class="btn btn-primary">Detaylar</a></td>
    </tr>
    }
</table>
<a href="/Kargo/KargoEkle" class="btn btn-info">Yeni Kargo Girişi</a>
